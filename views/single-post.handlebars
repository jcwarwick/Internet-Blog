<article class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 text-center">
  <h3 class="text-xl font-semibold">{{post.title}}</h3>
  <p class="text-gray-700 text-base mb-4">{{post.content}}</p>
</article>

{{#if loggedIn}}
  <div class="text-center">
    <textarea id="commentContent" placeholder="Add a comment" required class="w-full mb-2"></textarea>
    <button id="submitComment" data-post-id="{{post.id}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Submit Comment</button>
  </div>
{{/if}}

<div class="mt-4">
  {{#each post.comments as |comment|}}
    <div class="text-center border-b border-gray-200 py-2">
      <p class="text-gray-700">{{comment.content}}</p>
      <p class="text-sm text-gray-500">Comment by {{comment.user.username}}</p>
    </div>
  {{/each}}
</div>
<script src="/js/comment.js"></script>